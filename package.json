{
	"author": "Zach Toben <zach.toben@gmail.com>",
	"description": "A boilerplate electron and create-react-app setup",
	"name": "electron-create-react-app-boilerplate",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"electron-is-dev": "^0.3.0",
		"foundation-apps": "^1.2.0",
		"node-sass": "^4.12.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-router-dom": "^5.0.0",
		"react-scripts": "1.1.1",
		"sass": "^1.20.1"
	},
	"scripts": {
		"react-start": "cross-env BROWSER=none react-scripts start",
		"start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000/ && electron .\"",
		"build": "react-scripts build",
		"test": "react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"postinstall": "install-app-deps",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"devDependencies": {
		"concurrently": "^3.5.1",
		"cross-env": "^5.1.3",
		"electron": "^1.8.2",
		"electron-builder": "^20.40.2",
		"sass-loader": "^7.1.0",
		"wait-on": "^2.1.0"
	},
	"homepage": "./",
	"main": "public/electron.js",
	"build": {
		"win": {
			"target": "NSIS"
		},
		"extraFiles": [
			"public"
		  ]
		
	}
}
