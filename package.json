{
  "author": "Mario Ceresa <mario.ceresa@upf.edu>",
  "description": "Client for the reimagine analysis platform",
  "name": "reImagineClient",
  "version": "1.4.41",
  "repository": "https://bitbucket.org/simbiosys/reimagineclient/src/master/",
  "private": true,
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "electron": "^18.3.7",
    "electron-builder": "^23.6.0",
    "process": "^0.11.10",
    "react-app-rewired": "^2.2.1",
    "wait-on": "^5.3.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.0.0-rc.0",
    "@material-ui/icons": "^4.0.0-rc.0",
    "@rjsf/core": "^3.2.1",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^8.2.0",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^4.1.1",
    "electron-updater": "^4.6.1",
    "express": "^4.17.1",
    "foundation-apps": "^1.2.0",
    "fs": "^0.0.2",
    "https-browserify": "^1.0.0",
    "minio": "^7.0.32",
    "multer": "^1.4.4-lts.1",
    "path-browserify": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^16.2.0",
    "react-router-dom": "^5.0.2",
    "react-scripts": "^5.0.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.3",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tar": "^6.0.1",
    "timers-browserify": "^2.0.12",
    "tmp": "^0.2.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-app-rewired eject",
    "dist": "yarn build && electron-builder -m",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"yarn run electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack-win": "yarn build && electron-builder -w",
    "electron-pack-lin": "yarn build && electron-builder -l",
    "electron-pack-mac": "yarn build && electron-builder -m",
    "electron-publish-mac": "yarn build && electron-builder -m -p always",
    "electron-dist-mac": "electron-builder",
    "electron-publish": "yarn build && electron-builder -wl -p always",
    "buildmac": "react-scripts build --mac"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "proxy": "http://localhost:3000",
  "build": {
    "afterSign": "notarize.js",
    "appId": "edu.upf.simbiosys.reImagineClient",
    "productName": "reImagineClient",
    "copyright": "Copyright 2020-2022",
    "publish": [
      {
        "provider": "github",
        "owner": "bcn-medtech",
        "repo": "reImagineClient"
      }
    ],
    "linux": {
      "icon": "icon256x256.png",
      "target": "AppImage"
    },
    "win": {
      "icon": "icon.ico",
      "target": "NSIS"
    },
    "nsis": {
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "oneClick": false
    },
    "mac": {
      "icon": "icon.icns",
      "target": "dmg",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "installers/${os}/",
        "to": "installers",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/${os}/",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/deiden/",
        "to": "scripts/deiden/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "public/resources/icons",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "license": "MIT",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
