{
  "author": "Mario Ceresa <mario.ceresa@upf.edu>",
  "description": "Client for the reimagine analysis platform",
  "name": "ReImagineClient",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.0.0-rc.0",
    "@material-ui/icons": "^4.0.0-rc.0",
    "electron-is-dev": "^0.3.0",
    "express": "^4.17.1",
    "multer": "^1.4.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^5.0.2",
    "react-scripts": "1.1.1",
    "react-swipeable-views": "^0.13.3"
  },
  "scripts": {
    "react-start": "cross-env BROWSER=none react-scripts start",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000/ && electron .\"",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "electron": "^7.1.6",
    "electron-builder": "^20.0.8",
    "electron-log": "^4.1.1",
    "minio": "^7.0.15",
    "shelljs": "^0.8.3",
    "tar": "^6.0.1",
    "wait-on": "^2.1.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "win": {
      "target": "NSIS"
    },
    "extraFiles": [
      {
        "from": "public/resources/${os}/",
        "to": "installers",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/scripts",
        "to": "Scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/resources/icons",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
