{
  "author": "Zach Toben <zach.toben@gmail.com>",
  "description": "A boilerplate electron and create-react-app setup",
  "name": "electron-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.2.0",
    "@material-ui/icons": "^4.2.1",
    "electron-is-dev": "^0.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "scripts": {
    "react-start": "cross-env BROWSER=none react-scripts start",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000/ && electron .\"",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "electron": "^1.8.2",
    "electron-builder": "^20.0.8",
    "electron-packager": "^14.0.1",
    "wait-on": "^2.1.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "appId": "workflows_electron",
    "win": {
      "target": "NSIS"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "extraFiles": [
      {
        "from": "public/resources/${os}/",
        "to": "installers",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/scripts",
        "to": "Scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/resources/icons",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
