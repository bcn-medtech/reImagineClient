{
  "author": "Mario Ceresa <mario.ceresa@upf.edu>",
  "description": "Client for the reimagine analysis platform",
  "name": "reImagineClient",
  "version": "1.4.39",
  "repository": "https://bitbucket.org/simbiosys/reimagineclient/src/master/",
  "private": true,
  "devDependencies": {
    "electron": "10.4.7",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "electron-builder": "^22.14.13",
    "electron-notarize": "^0.3.0",
    "wait-on": "^2.1.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.0.0-rc.0",
    "@material-ui/icons": "^4.0.0-rc.0",
    "@rjsf/core": "^2.0.0",
    "dotenv": "^8.2.0",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^4.1.1",
    "electron-updater": "^4.6.1",
    "express": "^4.17.1",
    "foundation-apps": "^1.2.0",
    "minio": "^7.0.15",
    "multer": "^1.4.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^5.0.2",
    "react-scripts": "^2.0.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.3",
    "tar": "^6.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000/ && electron .\"",
    "electron-dev-win": "concurrently \"yarn start\" \"electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack-win": "yarn build && electron-builder -w",
    "electron-pack-lin": "yarn build && electron-builder -l",    
    "electron-pack-mac": "yarn build && electron-builder -m",
    "electron-publish-mac": "yarn build && electron-builder -m -p always",
    "electron-dist-mac": "electron-builder",
    "electron-publish": "yarn build && electron-builder -wl -p always",
    "buildmac": "react-scripts build --mac"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "afterSign": "notarize.js",
    "appId": "edu.upf.simbiosys.reImagineClient",
    "productName": "reImagineClient",
    "copyright": "Copyright 2020",
    "publish": [
      {
        "provider": "github",
        "owner": "bcn-medtech",
        "repo": "reImagineClient"
      }
    ],
    "linux": {
      "icon": "icon256x256.png",
      "target": "AppImage"
    },
    "win": {
      "icon": "icon.ico",
      "target": "NSIS"
    },
    "nsis": {
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "oneClick": false
    },
    "mac": {
      "icon": "icon.icns",
      "target": "dmg",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "extraResources": [
      {
        "from": "installers/${os}/",
        "to": "installers",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/${os}/",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/deiden/",
        "to": "scripts/deiden/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "public/resources/icons",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "license": "MIT",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
